{
  "manifest_version": 2,
  "name": "ChatGPT Toggle Answers",
  "description": "Toggle answers in ChatGPT",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.openai.com/*"],
      "js": ["content.js"]
    }
  ]
}
